{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch CSS-CTRL Handler Extension",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/out/extension.js",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: compile", // เรียก Task compile ก่อน
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "sourceMaps": true
    }
  ]
}
